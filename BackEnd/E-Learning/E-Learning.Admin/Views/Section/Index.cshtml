@{
    ViewData["Title"] = "Section Page";
    Layout = "_Layout";
}
@model List<Section>
  <div class="row blok mt-5">
        <div class="col-xs-11">
            <div class="box data-table">
                <div class="box-header position-relative table-header mt-2">
                    <div class="d-flex justify-content-between mt-3 mx-4 com-header">
                        <h3>Section</h3>
                        <a asp-controller="section" asp-action="add">
                            <span class="btn btn-success"><i class="las la-plus"></i>Add Section</span>
                        </a>
                    </div>
                </div>
                <div class="jadval box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tr>
                            <th>Name</th>
                            <th style="text-align:center;">Action</th>
                        </tr>
                    @foreach(var item in Model)
                    {
                     <tr>
                            <td>@item.Name</td>

                            @*Action Button*@ 

                            <td class="cell">
                                <a asp-controller="section" asp-action="edit" asp-route-id="@item.Id">
                                    <span class="btn btn-success">Edit</span>
                                </a>
                                 <a asp-controller="section" asp-action="delete" asp-route-id="@item.Id"
                                    onclick="return confirm('Rostdan ham o\'chirmoqchisiz?');" class="btn btn-danger">Delete
                                </a>                      
                            </td>
                    </tr>   
                    }
                    </table>
                </div>
            </div>
        </div>
    </div>