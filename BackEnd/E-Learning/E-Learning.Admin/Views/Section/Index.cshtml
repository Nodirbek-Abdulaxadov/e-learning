@{
    ViewData["Title"] = "Section Page";
    Layout = "_Layout";
}
@model List<Section>
   <div class="row blok mt-5">
        <div class="col-xs-11">
            <div class="box data-table">
                <div class="box-header position-relative table-header mt-2">
                    <div class="d-flex justify-content-between mt-3 mx-4 com-header">
                        <h3>Kurslar</h3>
                        <a asp-controller="course" asp-action="addcourses">
                            <span class="btn btn-success"><i class="las la-plus"></i>Add Course</span>
                        </a>
                    </div>
                </div>
                <div class="jadval box-body table-responsive no-padding">
                        <table class="table-light">
                            <tr class="table-light">
                                <td class="table-light">Name</td>
                                <td class="table-light" style="text-align:center;">Action</td>
                            </tr>
                  
                        @foreach(var item in Model)
                        {
                             <tr class="table-light">
                                <td class="table-light">@item.Name</td>
                                <td class="cell">
                                    <a asp-controller="section" asp-action="edit" asp-route-id="@item.Id">
                                    <span class="btn btn-success">Tahrirlash</span>
                                </a>
                                 <a asp-controller="section" asp-action="delete" asp-route-id="@item.Id"
                                    onclick="return confirm('Rostdan ham o\'chirmoqchisiz?');" class="btn btn-danger">O'chirish
                                </a>        
                                </td>
                            </tr>
                        }
                        </table>
             </div>
            </div>
        </div>
    </div>