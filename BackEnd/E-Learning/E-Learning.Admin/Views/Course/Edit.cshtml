@{
    ViewData["Title"] = "Edit Course Page";
    Layout = "_Layout";
}

@model EditCourseViewModel

   <div class="box-header position-relative table-header mt-2">
        <div class="d-flex justify-content-between mt-3 com-header">
            <h3>Add new Course</h3>
        </div>
    </div>
    <form class="mx-4" asp-controller="Course" asp-action="add" enctype="multipart/form-data" method="post">
        <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
            <label asp-for="Course.Name">Course Name</label>
            <input asp-for="Course.Name" type="text" class="form-control" id="title" placeholder="Course Name">
        </div> 
        
        <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
            <label asp-for="Course.SectionId">Chapter for</label>
            <select asp-for="Course.SectionId" class="form-control">
                <option selected disabled>-- Select theme --</option>
                @foreach (var item in Model.Sections)
               {
                   <option value="@item.Id">@item.Name</option>
               }
            </select>
        </div>

        <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
            <label asp-for="Course.VideoLink">YouTube video link</label>
            <input asp-for="Course.VideoLink" type="text" class="form-control" id="title" placeholder="Video course link">
        </div>

        <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
            <label asp-for="Course.ContentBody">Course content body</label>
            <textarea asp-for="Course.ContentBody" rows="5" type="text" class="form-control" id="title"></textarea>
        </div>

        @foreach (var item in Model.Sources)
       {
           <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
                <a href="@item.FileLink">@item.FileName</a>
                <span>@item.FileSize</span>
                <a class="btn btn-danger" asp-controller="course" asp-action="deletefile" asp-route-id="@item.Id">Delete</a>
           </div>
       }

        <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
            <label asp-for="Files">Additional resource files - you can select multiple files</label>
            <input asp-for="Files" multiple="multiple" type="file" class="form-control">
        </div>
        
         <div class="button-group text-center my-5">
            <button type="submit" class="btn btn-success me-5" style=" width:200px; " >
                Save
            </button>
            <a asp-controller="home" asp-action="index">
                <span class="btn btn-info"  style=" width:200px;">Cancel</span>
            </a>
         </div>
    </form>