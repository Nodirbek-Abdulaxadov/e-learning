@{
    ViewData["Title"] = "Add Course Page";
    Layout = "_Layout";
}

@model AddCourseViewModel

   <div class="box-header position-relative table-header mt-2">
        <div class="d-flex justify-content-between mt-3 com-header">
            <h3>Add new Course</h3>
        </div>
    </div>
    <form class="mx-4" asp-controller="Course" asp-action="add" enctype="multipart/form-data" method="post">
        <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
            <label asp-for="Course.Name">Course Name</label>
            <input asp-for="Course.Name" type="text" class="form-control" id="title" placeholder="Course Name">
        </div> 
        
        <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
            <label asp-for="Course.SectionId">Chapter for</label>
            <select asp-for="Course.SectionId" class="form-control">
                <option selected disabled>-- Select theme --</option>
                @foreach (var item in Model.Sections)
               {
                   <option value="@item.Id">@item.Name</option>
               }
            </select>
        </div>

        <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
            <label asp-for="Course.PageLink">YouTube video link</label>
            <input asp-for="Course.PageLink" type="text" class="form-control" id="title" placeholder="Video course link">
        </div>
        
         <div class="button-group text-center my-5">
            <a asp-controller="course" asp-action="index">
                <span class="btn btn-info"  style=" width:200px;">Cancel</span>
            </a>
            <button type="submit" class="btn btn-success me-5" style=" width:200px; " >
                Save
            </button>
         </div>
    </form>